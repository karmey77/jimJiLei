<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mt-3">愛情登入 / Login</h1>
            {{> message}}
            <form action="/users/login" method="POST">
                <div class="mb-3">
                    <label for="account" class="mb-2">愛情帳號 / Account</label>
                    <input type="account" id="account" name="account" class="form-control" placeholder="Enter Account">
                </div>
                <div class="mb-3">
                    <label for="password" class="mb-2">愛情密碼 / Password</label>
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Enter Password">
                </div>
                <button type="submit" class="btn btn-primary btn-block">愛情登入 / Login</button>
                {{!-- <a href="/auth/facebook" class="btn btn-info btn-block">臉書登入 / Facebook Login</a> --}}
            </form>
            <p class="lead mt-4">
                No Account? <a href="/users/register">愛情註冊 / Register</a>
            </p>
        </div>
    </div>
</div>